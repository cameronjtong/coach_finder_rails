<% provide(:title, 'Account activation') %>
<h1>Account Activation</h1>

<%= form_with(model: @user, url: account_activation_path(params[:id]), local: true) do |f| %>

<%= hidden_field_tag :email, @user.email %>

<%= f.label "Area of Expertise" %><br />
  <%= f.collection_check_boxes :expertise_ids, Expertise.all, :id, :name do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>
  <%= f.submit 'Finish Setup', class: 'btn btn-primary' %>
  <% end %>