<li>
    <%= gravatar_for(user, size: 50) %>
    <%= link_to(user.name) %>
    <%= user.expertises %>
    <% if current_user.admin? && !current_user_is?(user) %>
    <%= link_to 'Delete user', user, method: :delete,
                                     data: {confirm: 'You sure?'} %>
   <% end %>
</li>