<%= provide(:title, @user.name) %>
<div class='row'>
  <aside class='col-md-4'>
    <section class='user_info'>
      <h1>
        <%= gravatar_for(@user) %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    <% if @user.expertises.any? %>
    <section class='expertises'>
      <ul class='expertises'>
    <% @user.expertises.each do |expertise| %>
    <li><%= expertise.name %></li>
    <% end %>
    </ul>
  </section>
    <% end %>
  <% if logged_in? && current_user_is?(@user) %>
  <div class='row'>
    <aside class='col-md-4'>
      <section class='micropost_form'>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
  <% end %>
  <div class='col-md-8'>
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class='microposts'>
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
