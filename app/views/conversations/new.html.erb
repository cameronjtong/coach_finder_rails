<% provide(:title, 'New Conversation') %>
<h1>New Conversation</h1>

<%= form_tag conversations_path, method: :post do %>

<div>
  <%= select_tag :user_id, options_from_collection_for_select(@receipients, :id, :name) %>
</div>

<div>
  <%= text_field_tag :subject, nil, placeholder: 'Subject' %>
</div>

<div>
  <%= text_field_tag :body, nil, placeholder: 'Compose message...' %>
</div>

<%= submit_tag %>

<% end %>

